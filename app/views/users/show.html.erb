<div class="user">
  <h2><%= @user.nicename %></h2>
  <% if @user.id == @current_user.id %>
    <p><%= @user.mail %></p>
    <p><%= link_to "編集しますか？", "/users/#{@user.id}/edit" %></p>
  <% end %>
</div>

<div class="switch">
    <button class="users">自分が書いた感想</button>
    <button class="likes">押した♡ </button>
</div>
<div id="likes">
  <%= render partial: 'users/likes', locals: { likes: @likes } %>
</div>
<div id="users">
  <%= render partial: 'users/user', locals: { impressions: @impressions } %>
</div>

<script>
// ここの処理間違えている何をしたいのかがわからない
  $(function(){
    $('.likes').click(function(){
      $('#users').removeClass('active');
      $('#likes').addclass('active');
    });
    $('.users').click(function(){
      $('#likes').removeClass('active');
      $('#users').addClass('active');
    });
  });
</script>


