<div class="form-heading">新規ユーザー登録</div>
<div class="form users-form">
  <div class="form-body">
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
      <%= form_with url: "/users/create", local: true do |form| %>
        <%= form.text_field :nicename, :placeholder => "ユーザー名" %>
        <%= form.email_field :mail, :placeholder => "メールアドレス" %>
        <%= form.password_field :password, :placeholder => "パスワード" %>
        <%# form.password_field :password_confirmation, :placeholder => "パスワード" %>
        <%= form.submit '新規登録' %>
      <% end %>
  </div>
</div>