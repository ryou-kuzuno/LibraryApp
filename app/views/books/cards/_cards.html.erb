<% @books.zip(@impressions).each do |book, impression| %>
  <div class="card-poket">
    <div class="card">
        <div class="card-top">
          <% if book.image.attached? %>
            <div class="card-image">
              <%= image_tag book.image %>
            </div>
          <% end %>
            <div class="book-info">
              <div class="title">
              <p>タイトル</p>
                <h1><%= book.title %></h1>
              </div>
              <div class="author">
                <p>作者</p>
                <h1><%= book.author %></h1>
              </div>
            </div>
        </div>
      <div class="card-text">
        <p>題名</p>
        <div class="story">
          <%= impression.story %>
        </div>
      </div>
      <div class="card-under">
        <div>
          <%= link_to "詳細", "/show/#{impression.id}" %>
        </div>
      </div>
    </div>
  </div>
<% end %>